<div class="error-container container">
    <p class="error-message">
        @Message
    </p>
    <div class="text-center">
        <button class="btn btn-primary" @onclick="OnClosed">
            Close
        </button>
    </div>
</div>

@code
{
    [Parameter]
    public string Message { get; set; }

    [Parameter]
    public EventCallback OnClosed { get; set; }
}